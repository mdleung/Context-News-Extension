{
	"name": "Context",
	"version": "0.1",
	"description": "Read the news in Biblical context",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["style.css"],
			"js": ["content.js","mark.min.js","jquery-3.6.0.min.js"],
			"all_frame": true,
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "Context",
		"default_icon": "context.png"
	},
	"background": {
		"service_worker": "bg-loader.js"
	  },
	"permissions": [
		"tabs",
		"activeTab",
		"storage",
		"scripting"
	],
	"host_permissions": ["<all_urls>","http://localhost/*"],
	"web_accessible_resources": [{
		"resources": ["data/*.json"],
		"matches": ["<all_urls>","http://localhost/*"],
		"extension_ids": []
	   }]
		
	  

		

}