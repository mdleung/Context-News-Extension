{
	"name": "Context",
	"version": "0.1",
	"description": "Read the news in Biblical context",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"css": ["style.css"],
			"js": ["content.js","mark.min.js","jquery-3.6.0.min.js","handlebars-v4.7.7.js"],
			"all_frame": true,
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "Context",
		"default_icon": "context.png"
	},
	"background": {
		"service_worker": "bg-loader.js"
	  },
	"permissions": [
		"tabs",
		"activeTab",
		"storage",
		"scripting"
	],
	"host_permissions": ["*://*/*"],
	"web_accessible_resources": [{
		"resources": ["data/*.json"],
		"matches": ["*://*/*"],
		"extension_ids": []
	   }],
	   "sandbox": {
		"pages": ["popup.html","popup.js"]
	  }


	
		
	  

		

}